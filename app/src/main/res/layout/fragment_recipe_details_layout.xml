<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:orientation="vertical">
       <TextView
           android:id="@+id/tv_ingredients_headerrr"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:text="INGREDIENTS"
           android:textSize="20dp"
           android:layout_weight="1"
           android:textStyle="bold"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recipe_ingredientssss"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/tv_ingredients_headerrr"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            />
        <TextView
            android:id="@+id/tv_steps_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="STEPS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recipe_steps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_steps_header"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="10"
            />
        </LinearLayout>
</android.support.v4.widget.NestedScrollView>